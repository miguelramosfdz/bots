{
  "name": "@tradle/bots",
  "version": "1.0.0",
  "main": "index.js",
  "bin": "./cmd.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tradle/bots"
  },
  "license": "GPLv3",
  "dependencies": {
    "@tradle/kv": "tradle/kv",
    "@tradle/kv-levelup": "tradle/kv-levelup",
    "@tradle/multiqueue": "^2.2.0",
    "backoff": "^2.5.0",
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "clone": "^2.1.1",
    "co-express": "mvayngrib/co-express#no-co",
    "cross-env": "^3.1.4",
    "debug": "^2.6.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "husky": "^0.13.1",
    "ip": "^1.1.4",
    "level-jobs": "^0.6.0",
    "leveldown": "^1.6.0",
    "lowdb": "^0.14.0",
    "lru-cache": "^4.0.2",
    "memdown": "^1.2.4",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "mutexify": "^1.1.0",
    "object.pick": "^1.2.0",
    "once": "^1.4.0",
    "queuey": "mvayngrib/queuey#async",
    "safe-json-stringify": "^1.0.3",
    "safedown": "^1.0.1",
    "superagent": "^3.4.1",
    "traverse": "^0.6.6",
    "xtend": "^4.0.1",
    "ya-promise-queue": "^1.1.0"
  },
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "eslint": "^3.15.0",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.4.1",
    "eslint-plugin-standard": "2.0.1",
    "tape": "^4.6.3"
  },
  "optionalDependencies": {
    "@tradle/models": "https://github.com/tradle/models",
    "segfault-handler": "^1.0.0"
  },
  "scripts": {
    "test": "tap `git ls-files test/*.js`",
    "lint": "eslint --quiet --ignore-path .gitignore .",
    "start": "cross-env DEBUG=tradle:bots* ./cmd.js",
    "debug": "cross-env DEBUG=tradle:bots* node --debug --inspect ./cmd.js",
    "debug-brk": "cross-env DEBUG=tradle:bots* node --debug-brk --inspect ./cmd.js",
    "createvolumes": "docker volume create --name server-conf && docker volume create --name server-storage",
    "tradle-compose": "docker-compose -f ./tradle-server-compose.yml",
    "update": "yarn run tradle-compose -- pull",
    "up": "yarn run tradle-compose -- up -d",
    "server:stop": "yarn run tradle-compose -- stop",
    "server": "yarn run createvolumes && yarn run update && yarn run up",
    "server-console": "docker attach tradle-server",
    "echo": "yarn run start -- --conf ./conf/echo.json",
    "silly": "yarn run start -- --conf ./conf/silly.json",
    "products": "yarn run start -- --conf ./conf/products.json",
    "coverage": "istanbul cover tape test/*.js"
  }
}
